<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
            <br><br><br><br>
         プロフィール一覧
            <br><br>
         メールアドレス:<%= @user.email %>
            <br><br>
         地域:<%= @user.place %>
            <br><br>
         誕生日:<%= @user.birthday %>
            <br><br>
         コメント:<%= @user.comment %>
            <br><br>
         <%= link_to "edit" , edit_user_path(@user) %><br><br>
         <%= link_to "フォロー" , following_url %><br><br>
         <%= link_to "フォロワー" , follower_url %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>